@page
@using System.Data;
@model Identity.API.Areas.Identity.Pages.UsersModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Users overview";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <form method="post">
        <div class="row">
            <table>
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Name</th>
                        <th>Role</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.UsersTable.Rows)
                    {
                        <tr>
                            <td>@row["UserId"]</td>
                            <td>@row["Name"]</td>
                            <td>@row["Role"]</td>
                            <td>
                                <button type="submit" asp-page-handler="delete" asp-route-userId='@row["UserId"]' class="btn btn-primary">Delete user</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>
